@model IEnumerable<User>

@section Css
{
   <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css"> 
}

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">Kullanıcı Listesi</h1>
        <hr>
        <table id="myTable" class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>Ad</td>
                    <td>Soyad</td>
                    <td>Kullanıcı Adı</td>
                    <td>Email</td>
                    <td>Email Onayı</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.EmailConfirmed ? "bg-success":"bg-danger")">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.EmailConfirmed</td>
                            <td>
                                <a href="/admin/user/@item.Id" class="btn btn-primary btn-sm mr-2">Güncelle</a>

                                <form action="/admin/user/delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="UserId" value="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                                
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Henüz kayıtlı kullanıcı bulunmuyor.</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
{
   <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
   <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
   <script>
       $(document).ready( function () {
            $('#myTable').DataTable();
        } );
   </script>
}